
@{
    ViewData["Title"] = "Home Page";

}



@****************** LOGIN FINAL VERSION ***************************@


<div id="page-container" style="background-image: url('https://www.nfiindustries.com/wp-content/uploads/2019/04/Picture1-975x550.png'); min-height: 100vh; position: relative; height: 100%; width: 100%; background-repeat: no-repeat; background-size: cover; margin-top: -250px; margin-bottom: -20px; padding: 0px; !important">
    <div class="loginform" style="display: flex; justify-content: flex-end; align-items: flex-end; margin-right: 50px;  margin-top: 250px;">
        <div class="row text-white" style="margin-top: 300px;">



            <form asp-controller="Home" asp-action="Index" style="color: white">
                <div class="form-group">
                    <h3>Encuentra a tu familia y amigos</h3>

                    <input id="alias" name="alias" type="text" class="form-control" placeholder="Introduce el alias" value='@ViewData["alias"]'>
                </div>
                <div class="form-group">

                    <input id="canal" name="canal" type="text" class="form-control" placeholder="Introduce el canal">
                </div>

                <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" asp-route-alias=@ViewData["alias"] asp-route-canal=@ViewData["channel"]>¡Adelante!</button>
            </form>
        </div>
        <br>


    </div>
</div>

@{bool deviceExists = (bool)ViewData["aliasExists"]; }

@{bool channelExists = (bool)ViewData["channelExists"]; }


@{

    if (deviceExists)
    {

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Conflicto de alias</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>El campo alias no puede estar vacio.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Volver</button>

                    </div>
                </div>
            </div>
        </div>

    }

}


@section Scripts {


    @if (deviceExists)
    {
        <script>
            $('#exampleModal').modal();
        </script>
    }


}















