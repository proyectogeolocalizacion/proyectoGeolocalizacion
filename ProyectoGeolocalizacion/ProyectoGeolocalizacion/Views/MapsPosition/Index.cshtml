<!-- page-header -->
<div class="page-header">
    <div class="row">
        <div class="offset-1 page-caption">
            <h2 class="page-title text-center"> Nombre del canal: @canal</h2>
            <h2 class="text-center"> Dispositivos conectados a este canal</h2>
        </div>
    </div>
</div>
